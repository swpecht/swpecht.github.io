    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Cargo test",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib"
                ]
            },
            "args": []
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'liars_poker_bot'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=liars_poker_bot",
                    "--package=liars_poker_bot"
                ],
                "filter": {
                    "name": "liars_poker_bot",
                    "kind": "bin"
                }
            },
            "args": [
                "-v",
                "3",
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1"
            }
        },
    ]
}